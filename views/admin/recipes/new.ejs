<%- include('../../partials/header.ejs') %> 
<body>
    <%- include('../../partials/navbarAdmin.ejs') %> 
    <div class="container">
        <h1>Nova receita</h1>
        <form action="/recipes/create" method="post" enctype="multipart/form-data" class="new-recipe">
            <input type="text" name="title" id="title
            " placeholder="TÃ­tulo da receita">
            <!-- <input type="text" name="body" id="body
            " placeholder="Escreva aqui a receita"> -->
            <textarea name="body" id="body" placeholder="Escreva aqui a receita"></textarea>
            <select name="category" class="form-control">
                <option disabled>Selecione a categoria de receita.</option>
                <% categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.title %></option>
                
                <% }) %> 
              </select>
            <input type="file" name="image" id="image">
            
           <button type="submit">Enviar</button>
        </form>
        
    </div>

</body>
